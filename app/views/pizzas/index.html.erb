<div class="container mx-auto py-8">
  <% if notice.present? %>
    <div class="p-4 mb-6 bg-green-50 text-green-700 border border-green-200 rounded-md shadow-sm" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Pizzas" %>

  <div class="flex justify-between items-center mb-10">
    <h1 class="font-extrabold text-5xl text-gray-800 tracking-tight">Pizzas</h1>
    <%= link_to "New Pizza", new_pizza_path, class: "inline-block bg-blue-600 text-white py-3 px-6 rounded-full font-medium shadow-lg hover:bg-blue-700 focus:outline-none transition duration-200" %>
    <%= link_to "Home", root_path, class: "inline-block bg-blue-600 text-white py-3 px-6 rounded-full font-medium shadow-lg hover:bg-blue-700 focus:outline-none transition duration-200" %>
  </div>

  <div id="pizzas" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @pizzas.each do |pizza| %>
      <div class="group bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-200 ease-in-out overflow-hidden">
        <div class="p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition duration-200"><%= pizza.name %></h2>
          <p class="text-gray-600 mb-4 leading-relaxed"><%= pizza.description %></p>
          <%= link_to "View Details", pizza, class: "inline-block bg-gray-200 text-gray-700 py-2 px-4 rounded-full font-medium hover:bg-gray-300 hover:text-gray-900 transition duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
